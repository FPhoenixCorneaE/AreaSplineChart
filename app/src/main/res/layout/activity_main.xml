<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.wkz.area_spline_chart.AreaSplineChartView
        android:id="@+id/cvAreaSpline"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        app:ascv_firstPointMarginLeft="30dp"
        app:ascv_lineSmoothness="0.2"
        app:ascv_splineWidth="2.5dp"
        app:ascv_xyAxisLineColor="#eeeeee"
        app:ascv_xyAxisLineWidth="0.5dp"
        app:ascv_yAxisTextColor="#999999"
        app:ascv_yAxisTextSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.wkz.area_spline_chart.TimeAnimLayout
        android:id="@+id/flTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:paddingEnd="48dp"
        app:layout_constraintTop_toBottomOf="@+id/cvAreaSpline" />
</androidx.constraintlayout.widget.ConstraintLayout>